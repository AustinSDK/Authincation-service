<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
        div#form{
            background-color: rgb(19, 19, 19);
            width: 25%;
            padding: 10px;
            margin: 0 auto;
        }
        h1{
            text-align: center;
        }
        form{
            background-color: rgb(15, 15, 15);
            padding: 5px;
        }
        form br{
            margin-block: 3px;
        }
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        form input[type="text"], form input[type="password"]{
            background: none;
            border: none;
            border-bottom: 1px rgb(139, 139, 139) solid;
            color: white;
            width: 55%; 
        }
        form input[type="submit"]{
            padding: 6px;
            margin-top: 10px;
            background-color: rgb(190, 81, 54);
            border: none;
            border: 1px black solid;
            border-radius: 5px;
            color: white;
            width: 55%;
            cursor:pointer;
        }
        form input[type="submit"]:disabled{
            background-color: rgb(109, 47, 32);
            color: white;
            cursor:not-allowed;
        }
    </style>
</head>
<body>
    <%- include('partials/nav', { user: user }) %>
    <main class="container">
        <form action="" id="loginForm" class="auth-form">
            <h1>Login</h1>
            <noscript>
                <p class="center" style="margin-top:0.5rem;"><a href="https://www.enable-javascript.com/">This app requires JavaScript.</a></p>
            </noscript>
            <div class="field">
                <label for="t_username">Username</label>
                <input type="text" name="username" id="t_username" autocomplete="username">
            </div>
            <div class="field">
                <label for="t_password">Password</label>
                <input type="password" name="password" id="t_password" autocomplete="current-password">
            </div>
            <div class="field" id="totpField" style="display: none;">
                <label for="t_totp">TOTP Code</label>
                <input 
                    type="text" 
                    name="totpCode" 
                    id="t_totp" 
                    placeholder="000000"
                    maxlength="6"
                    pattern="[0-9]*"
                    inputmode="numeric"
                    autocomplete="off"
                >
                <small style="color: var(--muted, #888); font-size: 0.85em;">Enter the 6-digit code from your authenticator app</small>
            </div>
            <input type="submit" value="Login" class="btn btn-accent" disabled>
            <div class="alt-link"><a href="/register">Need an account? Sign up</a></div>
        </form>
    </main>
</body>
</html>
<script>

function toToast(msg){
    Toastify({
        text: msg,
        duration: 3000,
        newWindow: false,
        close: false,
        gravity: "top", // `top` or `bottom`
        position: "right", // `left`, `center` or `right`
        stopOnFocus: true, // Prevents dismissing of toast on hover
        style: {
            background: "rgb(212, 56, 56)",
            color:"white"
        },
    }).showToast();
}

let form = document.getElementById("loginForm");

let username = document.getElementById("t_username");
let password = document.getElementById("t_password");
let totpCode = document.getElementById("t_totp");
let totpField = document.getElementById("totpField");

let submit = document.querySelector("form input[type=\"submit\"]");
let requiresTOTP = false;

document.addEventListener("DOMContentLoaded",e=>{
    submit.disabled = false;
    
    // Auto-format TOTP input to only allow numbers
    if (totpCode) {
        totpCode.addEventListener('input', (e) => {
            e.target.value = e.target.value.replace(/\D/g, '');
        });
    }
});

form.addEventListener("submit",async e=>{
    e.preventDefault();
    submit.disabled = true;
    
    try {
        const requestBody = {
            username: username.value,
            password: password.value
        };
        
        // Include TOTP code if field is visible and has value
        if (requiresTOTP && totpCode && totpCode.value.trim()) {
            requestBody.totpCode = totpCode.value.trim();
        }
        
        let _fetch = await fetch("/login",{
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            method: "POST",
            body: JSON.stringify(requestBody),
            credentials: 'include' // This is important to accept cookies
        });
        
        let response = await _fetch.json();
        let status = _fetch.status;
        
        if (status === 200) {
            // Success - redirect to home page
            window.location.href = "/";
        } else {
            // Check if TOTP is required
            if (response.requiresTOTP && !requiresTOTP) {
                // Show TOTP field
                requiresTOTP = true;
                totpField.style.display = 'block';
                toToast(response.message || "Please enter your TOTP code");
                submit.disabled = false;
                // Focus on TOTP input
                if (totpCode) {
                    totpCode.focus();
                }
            } else {
                // Show error message
                toToast(response.message || "Login failed");
                submit.disabled = false;
                // If TOTP was wrong, clear it
                if (requiresTOTP && totpCode) {
                    totpCode.value = '';
                    totpCode.focus();
                }
            }
        }
    } catch (error) {
        toToast("An error occurred during login");
        submit.disabled = false;
    }
})
</script>