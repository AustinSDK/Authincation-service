<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/nav', { user: user }) %>
    <main class="container">
        <header>
            <h1>Users</h1>
        </header>
        <section>
            <ul class="list" style="margin-top:1rem;">
                <% users.forEach(_user => { %>
                    <li class="card">
                        <% if (user.id !== _user.id) { %>
                            <span class="username" style="font-size: 35px;">
                                <a href="/user/<%= _user.id %>/settings"><%= _user.username %></a><br>
                                <span class="user-id" style="font-size: 18px; color: var(--accent-transparency);">(ID: <%= _user.id %>)</span>
                            </span>
                        <% } else { %>
                            <span class="username" style="font-size: 35px;">
                                <a href="/user/<%= _user.id %>/settings" style="color: var(--accent-hover)"><%= _user.username %></a>
                                <br>
                                <span class="user-id" style="font-size: 18px; color: var(--accent-transparency);">(ID: <%= _user.id %>)</span>
                            </span>
                        <% } %>
                        <br>
                        <span class="admin-link">
                            <a href="/user/<%= _user.id %>/settings?admin" style="color: rgb(150, 56, 33);">Admin view</a>
                        </span>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
</body>
</html>