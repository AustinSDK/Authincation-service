<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
        div#form{
            background-color: rgb(19, 19, 19);
            width: 25%;
            padding: 10px;
            margin: 0 auto;
        }
        h1{
            text-align: center;
        }
        form{
            background-color: rgb(15, 15, 15);
            padding: 5px;
        }
        form br{
            margin-block: 3px;
        }
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        form input[type="text"], form input[type="password"]{
            background: none;
            border: none;
            border-bottom: 1px rgb(139, 139, 139) solid;
            color: white;
            width: 55%; 
        }
        form input[type="submit"]{
            padding: 6px;
            margin-top: 10px;
            background-color: rgb(190, 81, 54);
            border: none;
            border: 1px black solid;
            border-radius: 5px;
            color: white;
            width: 55%;
            cursor:pointer;
        }
        form input[type="submit"]:disabled{
            background-color: rgb(109, 47, 32);
            color: white;
            cursor:not-allowed;
        }
    </style>
</head>
<body>
    <%- include('partials/nav', { user: user }) %>
    <main class="container">
        <form action="" id="registerForm" class="auth-form">
            <h1>Signup</h1>
            <noscript>
                <p class="center" style="margin-top:0.5rem;"><a href="https://www.enable-javascript.com/">This app requires JavaScript.</a></p>
            </noscript>
            <div class="field">
                <label for="t_username">Username</label>
                <input type="text" name="username" id="t_username" autocomplete="username">
            </div>
            <div class="field">
                <label for="t_password">Password</label>
                <div class="pw-wrapper">
                    <input type="password" name="password" id="t_password" autocomplete="new-password">
                    <button type="button" id="togglePassword" class="toggle-pw" tabindex="-1" aria-label="Toggle Password Visibility">üëÅÔ∏è</button>
                </div>
            </div>
            <input type="submit" value="Signup" class="btn btn-accent" disabled>
            <div class="alt-link"><a href="/login">Already have an account? Login</a></div>
        </form>
    </main>
</body>
</html>
<script>

function toToast(msg){
    Toastify({
        text: msg,
        duration: 3000,
        newWindow: false,
        close: false,
        gravity: "top", // `top` or `bottom`
        position: "right", // `left`, `center` or `right`
        stopOnFocus: true, // Prevents dismissing of toast on hover
        style: {
            background: "rgb(212, 56, 56)",
            color:"white"
        },
    }).showToast();
}

let form = document.getElementById("registerForm");


let username = document.getElementById("t_username");
let password = document.getElementById("t_password");

let submit = document.querySelector("form input[type=\"submit\"]")


document.addEventListener("DOMContentLoaded",e=>{
    submit.disabled = false;
    const togglePassword = document.getElementById("togglePassword");
    togglePassword.addEventListener("click", function() {
        if (password.type === "password") {
            password.type = "text";
            togglePassword.textContent = "üôà";
        } else {
            password.type = "password";
            togglePassword.textContent = "üëÅÔ∏è";
        }
    });
})

form.addEventListener("submit",async e=>{
    e.preventDefault();
    submit.disabled = true;
    let _fetch = await fetch("/register",{
        headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json'
        },
        method: "POST",
        body: JSON.stringify({username:username.value,password:password.value})
    });
    let response = await _fetch.json();
    let status = _fetch.status;
    response = response['message'];
    toToast(response);
    if (status !== 201) return submit.disabled = false;
    window.location.href = "/login"
})
</script>