<div id="permissions-tab">
    <!-- User actions :D -->
    <div class="admin-section">
        <h3>User actions</h3>
        <p class="muted">Administrative actions to use against people >:)</p>
        
        <div class="field">
            <a href="#" onclick="deleteAccount()">Delete user account</a> | <a href="#" onclick="resetPassword()">Reset user password</a>
        </div>
    </div>

    <!-- permission manager -->
    <div class="admin-section">
        <h3>User Permissions Management</h3>
        <p class="muted">Manage your user permissions. Changes will take effect after saving.</p>
        
        <div class="field">
            <label>Your Current Permissions</label>
            <div class="permission-editor">
                <div class="chips" id="userPermChips" aria-live="polite"></div>
                <div class="perm-add-row">
                    <input type="text" id="userPermInput" placeholder="Type permissions (comma-separated)" aria-label="Add user permissions" />
                    <button type="button" id="clearUserPerms" class="btn btn-ghost small" title="Clear all">Clear</button>
                </div>
                <p class="muted" style="font-size:.65rem; margin:.4rem 0 0;">Examples: admin, moderator, analytics, viewer, editor (separate with commas)</p>
            </div>
        </div>
        
        <div class="admin-actions">
            <button type="button" id="saveUserPerms" class="btn btn-accent">Save Permissions</button>
            <button type="button" id="resetUserPerms" class="btn btn-ghost">Reset Permissions</button>
        </div>
    </div>
</div>